<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:text="Cat API"
              android:id="@+id/title"
    />

    <android.support.v7.widget.AppCompatButton android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/title"
                                               app:layout_constraintLeft_toLeftOf="parent"
                                               app:layout_constraintRight_toRightOf="parent"
                                               android:id="@+id/loadCatButton"
                                               android:text="Load Cat"
                                               android:onClick="loadCat"
    />

    <!--ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@id/loadCatButton"
               android:id="@+id/catPicture"
    /-->

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/loadCatButton"
                  android:id="@+id/catPictures"


    ></LinearLayout>

</android.support.constraint.ConstraintLayout>