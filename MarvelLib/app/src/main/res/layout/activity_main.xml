<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    <TextView
            android:text="@string/main_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instructions" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/instructions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageButton android:src="@drawable/guardiansofthegalaxyvol2"
                         android:tag="guardiansofthegalaxyvol2"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
            <ImageButton android:src="@drawable/spidermanhomecoming"
                         android:tag="spidermanhomecoming"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
            <ImageButton android:src="@drawable/thorragnarok"
                         android:tag="thorragnarok"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageButton android:src="@drawable/blackpanther"
                         android:tag="blackpanther"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
            <ImageButton android:src="@drawable/avengersinfinitywar"
                         android:tag="avengersinfinitywar"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
            <ImageButton android:src="@drawable/antmanthewasp"
                         android:tag="antmanthewasp"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageButton android:src="@drawable/captainmarvel"
                         android:tag="captainmarvel"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
            <ImageButton android:src="@drawable/avengers_endgame"
                         android:tag="avengers_endgame"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
            <ImageButton android:src="@drawable/spiderman_farfromhome"
                         android:tag="spiderman_farfromhome"
                         android:layout_weight="1"
                         android:scaleType="centerCrop"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="0dp"
                         android:onClick="onMovieClick"
            />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>